<ClickableTextFieldRound>:
    size_hint_y: None
    height: tpassword.height
    id: textfieldcontainer
    MDTextField:
        id:tpassword
        hint_text: root.hint_text
        text: root.text
        password: True
        #icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: tpassword.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            tpassword.password = False if tpassword.password is True else True


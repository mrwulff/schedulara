<MyAKBarChart@AKBarChart>
    size_hint_y: None
    height: dp(200)
    width:1000
    x_values: [0, 5, 8, 15]
    y_values: [0, 10, 6, 8]
    label_size: dp(12)

<NewStatsScreen>
    name: "newstats"
    Image:
        source: 'images/rh.jpg'
        size: self.width,self.height
    BoxLayout:
        id: graphs2
        orientation: "vertical"
        width:900
        padding:0
        MDToolbar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]
        MDBoxLayout:
            #orientation: 'horizontal'
            size_hint: 1,None
            #height: app.mheight+10
            width: dp(100)
            height:dp(42)
            

            MDRaisedButton:
                text: 'YTD'
                id: YTD

                on_press:(app.do_new_stats_format('YTD'))
            MDRaisedButton:
                text: 'Year'
                id: Year

                on_press:(app.do_new_stats_format('Year'))
            MDRaisedButton:
                text: 'All'
                id: All

                on_press:(app.do_new_stats_format('All'))
            MDRaisedButton:
                text: 'Custom'
                id: Custom

                on_press:
                   # (app.make_stats('custom','custom'))
                    (app.show_date_picker())
        MDBoxLayout:
        
            orientation: 'horizontal'
            size_hint: 1,None
            #height: app.mheight
            height: dp(42)
            MDRaisedButton:
                text: 'All'
                id: dstart
                #size_hint: .5,None
                #height: app.mheight

                #md_bg_color: app.theme_cls.primary_light
                #padding:10
                #on_press:(app.show_date_picker())
            MDRaisedButton:
                text: 'All'
                #size_hint: .5,None
                #height: app.mheight
                #md_bg_color: app.theme_cls.primary_light
                #padding:10
                #spacing:10,10
                id: dend
                #on_press:(app.show_date_picker())


        ScrollView:
            size_hint_min: None,None
            do_scroll_x:True
            do_scroll_y:True
            #size_hint: None,None
            #width: dp(3000)
            #adaptive_height: True
            height:full_stats.height+dp(1000)
            
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(15)
                padding: dp(5)
                #adaptive_height: True
                size_hint: None,None
                width: dp(900)
                height:dp(1200)
                id:full_stats


                MDCard:
                    orientation: "vertical"
                    id:c1c
                    bg_color: app.theme_cls.primary_light
                    height:app.mheight
                    MyAKBarChart:
                                
                        id: c1
                        labels: True
                        size_hint: None,None
                        width: dp(350)
                
                    OneLineListItem:
                        text: "Position"
                        id:c1d
                        bg_color: app.theme_cls.primary_light
                MDCard:
                    orientation: "vertical"
                    bg_color: app.theme_cls.primary_light
                    id:c2c
                    width: 350
                    #size_hint: 1.1,None
                    height:app.mheight
                    MyAKBarChart:
                                
                        id: c2
                        labels: True
                        size_hint: None,None
                        width: dp(350)
                        
                
                    OneLineListItem:
                        text: "Type"
                        id:c2d
                        bg_color: app.theme_cls.primary_light

                MDCard:
                    orientation: "vertical"
                    bg_color: app.theme_cls.primary_light
                    height:app.mheight+500
                    MyAKBarChart:
                                
                        id: c3
                        labels: True
                        size_hint: None,None
                        width: dp(900)
                
                    ThreeLineListItem:
                        text: "Check Amount"
                        id: c3d
                        bg_color: app.theme_cls.primary_light
                MDCard:
                    orientation: "vertical"
                    bg_color: app.theme_cls.primary_light
                    height:app.mheight
                    MyAKBarChart:
                                
                        id: c4
                        labels: True
                        size_hint: None,None
                        width: dp(950)
                
                    OneLineListItem:
                        text: "Client"
                        bg_color: app.theme_cls.primary_light


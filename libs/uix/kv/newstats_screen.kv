<MyAKBarChart@AKBarChart>
    size_hint_y: None
    height: dp(200)
    width:1000
    x_values: [0, 5, 8, 15]
    y_values: [0, 10, 6, 8]
    label_size: dp(12)

<NewStatsScreen>
    name: "newstats"
    Image:
        source: 'images/rh.jpg'
        size: self.width,self.height
    BoxLayout:
        id: graphs2
        orientation: "vertical"
        width:900
        padding:0
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]
        MDBoxLayout:
            #orientation: 'horizontal'
            size_hint: 1,None
            #height: app.mheight+10
            width: dp(100)
            height:dp(42)
            

            MDRaisedButton:
                text: 'YTD'
                id: YTD

                on_press:(app.do_new_stats_format('YTD'))
            MDRaisedButton:
                text: 'Year'
                id: Year

                on_press:(app.do_new_stats_format('Year'))
            MDRaisedButton:
                text: 'All'
                id: All

                on_press:(app.do_new_stats_format('All'))
            MDRaisedButton:
                text: 'Custom'
                id: Custom

                on_press:
                   # (app.make_stats('custom','custom'))
                    (app.show_date_picker())
        MDBoxLayout:
            id: graph5
            orientation: 'horizontal'
            size_hint: 1.1,None
            #height: app.mheight
            height: dp(42)

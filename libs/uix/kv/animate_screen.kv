<AnimateScreen>
    name: "Pay"
    FitImage:
        #source: 'images/rh.jpg'
        id: pic
        source: app.get_wall("today")
        size: self.width,self.height


    BoxLayout:
        orientation: "vertical"
        height: 2000
        MDTopAppBar:
            #title: "AnimateMoney"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left')]]
        ScrollView:


            MDList:
                spacing: app.cspacing/2
                padding: app.cpadding/2,app.cpadding/2
                radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                bg_color:app.theme_cls.primary_light


                ThreeLineAvatarIconListItem:
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    id:show
                    IconLeftWidget:
                        icon:"information-outline"
                ThreeLineAvatarIconListItem:
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    id:top
                    IconLeftWidget:
                        icon:"calendar-clock"
                ThreeLineAvatarIconListItem:
                    id:moneyinfo
                    bg_color:app.theme_cls.bg_darkest
                    on_release: app.rate_input()
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    
                       
                    IconLeftWidget:
                        icon:"table-account"
                    
                ThreeLineAvatarIconListItem:
                    id:moneya
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    IconLeftWidget:
                ThreeLineAvatarIconListItem:
                    id:money_r
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    IconLeftWidget:
                        icon:"timer-sand"
                ThreeLineAvatarIconListItem:
                    id:moneyb
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    IconLeftWidget:
                        icon:"cash-multiple"
                ThreeLineAvatarIconListItem:
                    id:money_pay
                    bg_color:app.theme_cls.bg_darkest
                    spacing: app.cspacing/2
                    padding: app.cpadding/2,app.cpadding/2
                    radius:[app.c_radius, app.c_radius, app.c_radius, app.c_radius]
                    IconLeftWidget:
                        icon:"cash-multiple"
                






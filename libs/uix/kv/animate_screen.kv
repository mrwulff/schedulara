<AnimateScreen>
    name: 'animate'


    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "AnimateMoney"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left')]]
        ScrollView:


            MDList:

                ThreeLineAvatarIconListItem:
                    id:show
                    IconLeftWidget:
                        icon:"information-outline"
                ThreeLineAvatarIconListItem:
                    id:top
                    IconLeftWidget:
                        icon:"calendar-clock"
                ThreeLineAvatarIconListItem:
                    id:moneyinfo
                    IconLeftWidget:
                        icon:"table-account"
                ThreeLineAvatarIconListItem:
                    id:moneya
                    IconLeftWidget:
                ThreeLineAvatarIconListItem:
                    id:money_r
                    IconLeftWidget:
                        icon:"timer-sand"
                ThreeLineAvatarIconListItem:
                    id:moneyb
                    IconLeftWidget:
                        icon:"cash-multiple"
                ThreeLineAvatarIconListItem:
                    id:money_pay
                    IconLeftWidget:
                        icon:"cash-multiple"

                    
<NewHomeScreen>:
    #import ScrollEffect kivy.effects.scroll.ScrollEffect
    ##:import ScrollEffect  kivy.effects.scroll.ScrollEffect
    #:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect
    #:import DampedScrollEffect kivy.effects.opacityscroll.DampedScrollEffect
    name: "newhome"
    FitImage:
        #source: 'images/rh.jpg'
        id: pic
        source: app.get_wall("today")
        size: self.width,self.height
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "Settings"
        #    height: app.mheight
            #left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]


            MDTopAppBarLeadingButtonContainer:
    
                MDActionTopAppBarButton:
                    icon: "chevron-left"
                    on_release: app.change_screen('today','left')
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
        ScrollView:
            MDList:
                id: rlist

<Content>:
    adaptive_height: True
    BoxLayout:
        adaptive_height: True
        orientation: 'vertical'
        size_hint_y: None
        height:dp(150)
        TwoLineListItem:
            id:pos
            on_release: app.showinfo('wow2', self.secondary_text,0,)
        TwoLineListItem:
            id:pos2
            on_release: app.showinfo('wow3', self.secondary_text,1,)

<Content2>:
    adaptive_height: True
    BoxLayout:
        adaptive_height: True
        orientation: 'vertical'

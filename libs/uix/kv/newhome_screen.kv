
                    
<NewHomeScreen>:
    #import ScrollEffect kivy.effects.scroll.ScrollEffect
    ##:import ScrollEffect  kivy.effects.scroll.ScrollEffect
    #:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect
    #:import DampedScrollEffect kivy.effects.opacityscroll.DampedScrollEffect
    name: "newhome"

    BoxLayout:
        orientation: 'vertical'

        
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.today(),'home']]
            #right_action_items: [["check-bold", lambda x: app.check_ach(),'check ach'],["refresh", lambda x: app.ach_reset(),'reset ach'],["counter", lambda x: app.ach_top(0),'reset ach']]


        ScrollView:
            MDList:
                id: rlist

<Content>:
    adaptive_height: True
    BoxLayout:
        adaptive_height: True
        orientation: 'vertical'
        size_hint_y: None
        height:dp(150)
        TwoLineListItem:
            id:pos
            on_release: app.showinfo('wow2', self.secondary_text,0,)
        TwoLineListItem:
            id:pos2
            on_release: app.showinfo('wow3', self.secondary_text,1,)

<Content2>:
    adaptive_height: True
    BoxLayout:
        adaptive_height: True
        orientation: 'vertical'
        size_hint_y: None
        height:dp(150)
        TwoLineListItem:
            id:pos
            on_release: app.showinfo('wow', self.secondary_text,0, )


<IngredientDialog>:
    title: "Info:"


<RecipeLine>:
    #adaptive_height: True
    OneLineListItem:
        text: root.text
        text_color: [50,50,50,50]
        on_release: app.showinfo(root.parent.parent.panel_cls.text, self.text,children.index(instance))
    MDIconButton:
        icon:'plus'


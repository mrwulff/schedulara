<themescreen>
    #:import Clipboard kivy.core.clipboard.Clipboard
    #:import Snackbar kivymd.uix.snackbar.Snackbar
    name: "theme"
    FitImage:
        id:pic
        source: app.get_wall('theme')
        size: self.width,self.height
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            #left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]
            left_action_items: [['chevron-left', lambda screen: app.today(),'home']]
        ScrollView:


            MDList:
                spacing: 2
                MDListItem: 
                    id: button
                    text: "Wallpapepr"
                    bg_color:self.theme_cls.primary_light
                    #on_release:app.do_wallpaper_screen(0)

                    IconLeftWidget:
                        id: button2
                        icon: "bullhorn"
                    YourContainer:
                        id: button3
                        MDButton:
                            id: button5
                            padding: [0, 0]

                            width: 15
                            text: 'Select'
                            pos_hint: {'center_x': .7, 'center_y': .5}
                            values: app.wall
                            items: app.wall
                            #id: noise
                            on_release: 
                                on_release:app.do_wallpaper_screen(0)  
                                #app.save_theme_picker()      
                MDListItem:
                    text: "DarkMode"
                    bg_color:self.theme_cls.primary_light
                    on_press: 
                        #app.show_theme_picker()
                        #app.do_theme()
                        
                    
                    YourContainer:
                        id: container
                        MDSwitch:
                            widget_style: "ios"
                            icon: "plus"
                            id: theme2
                            #active: app.lol()
                            active: app.check_att('theme2')
                            on_active:
                                #app.on_checkbox_active(*args)
                                app.updatetext("theme2")
                                app.save_theme_picker()
                                #app.restart()

                    IconLeftWidget:
                        icon: "palette"
                MDListItem: 
                    id: button
                    text: "Colors"
                    bg_color:self.theme_cls.primary_light

                    IconLeftWidget:
                        id: button2
                        icon: "bullhorn"
                    YourContainer:
                        id: button3
                        MDButton:
                            id: button4
                            padding: [0, 0]

                            width: 15
                            text: self.theme_cls.primary_palette
                            pos_hint: {'center_x': .7, 'center_y': .5}
                            values: app.pcolor
                            items: app.pcolor
                            #id: noise
                            on_release: 
                                app.choose_drop(app.pcolor,'pcolor')
                                app.save_theme_picker()
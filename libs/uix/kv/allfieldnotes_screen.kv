
<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.view_picture(root)

    MDCardSwipeFrontBox:

        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            

<allfieldnotesscreen>
    #:import Clipboard kivy.core.clipboard.Clipboard
    #:import Snackbar kivymd.uix.snackbar.Snackbar
    name: "allfieldnotes"


    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "Pay"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]
            right_action_items: [['reload-alert', lambda screen: app.update_fieldnotes(),'home']]
        MDTextField:
            #text: "bla"
            id:search
            size_hint: 1,None
            height: app.icons_height
            #on_text_validate: app.search_icons()
            on_text: app.search_fieldnotes()
            hint_text: "Search"
            icon_left:
                "search"

        MDListItem:
            text: "Only show favorites"
            size_hint: 1,None
            height: app.icons_height
            halign: "center"
            YourContainer:
                id: container
                MDSwitch:
                    widget_style: "ios"
                    active: app.check_att('fav_notes')
                    id: fav_notes
                    on_active:
                        app.updatetext("fav_notes")
                        app.search_fieldnotes()
            IconLeftWidget:
                icon: "star-box"
        ScrollView:
            #id: history_view


            MDList:
                

            
                
                spacing: app.cspacing/2
                padding: app.cpadding/2,app.cpadding/2
                bg_color:app.theme_cls.primary_light
                id: payperiod_list
                

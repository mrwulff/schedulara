<editShowscreen>
    #:import Clipboard kivy.core.clipboard.Clipboard
    #:import Snackbar kivymd.uix.snackbar.Snackbar
    name: "editShow"
    FitImage:
        #source: 'images/rh.jpg'
        id: pic
        source: app.get_wall("today")
        size: self.width,self.height
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('archive','left'),'home']]





        ScrollView:
            #id: history_view

            
            MDList:
                spacing: app.cspacing/2
                padding: app.cpadding/2,app.cpadding/2
                bg_color:app.theme_cls.bg_dark
                id: archive
                ThreeLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    id:show
                    text:'bla'
                    IconLeftWidget:
                        icon:"calendar-star"
                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Hour Unpaid Lunches"
                    id: lunches
                    YourContainer:
                        id: button3
                        MDRaisedButton:
                            id: button4
                            padding: [15, 15]

                            #width: 5
                            text: "0"
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            values: app.lunches
                            items: app.lunches
                            id: button4
                            on_release: app.choose_drop(app.lunches,'lunches')
                            size_hint:app.right_hint
                            width:app.right_width
                    IconLeftWidget:
                        icon: "food"

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "OverTime After"
                    id: ota
                    YourContainer:
                        id: button3
                        MDRaisedButton:
                            padding: [15, 15]
                            size_hint:app.right_hint
                            width:app.right_width

                            #width: 5
                            text: "8"
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            values: app.oth
                            items: app.oth
                            id: button5
                            on_release: app.choose_drop(app.oth,'oth')
                            
                    IconLeftWidget:
                        icon: "one-up"

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Time Out"
                    id: endtime
                    IconLeftWidget:
                        icon: "stop-circle"
                    YourContainer:
                        id: container

                        MDRaisedButton:
                            text:"Time"
                            id:newhours
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            on_release: app.show_time_picker("end_time")

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Rate"
                    id: rate1
                    on_release: app.tokast('wow')
                    IconLeftWidget:
                        icon: "cash"
                    YourContainer:
                        id: container

                        TextInput:
                            #text:"28.5"
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            
                            id:rate
                            size_hint:app.right_hint
                            width:app.right_width
                            #id:newhours
                            #on_release: app.show_time_picker()

                TextInput:

                    id: user_notes
                    valign: 'middle'
                    hint_text:'Notes'
                    halign: 'left'
                    font_size: dp(16)
                    multiline: True
                    size_hint: 1, None
                    height: dp(100)
                    #height: scrlv.height
                    background_color: app.theme_cls.bg_dark
                    hint_text_color:app.theme_cls.opposite_bg_dark
                    text_color:app.theme_cls.opposite_bg_dark
                    foreground_color:app.theme_cls.opposite_bg_dark


                MDRaisedButton:
                    text:"Update"
                    on_release: app.update_show()
                MDRaisedButton:
                    text:"Hide"
                    on_release: app.hide_show()

<editShowscreen>
    #:import Clipboard kivy.core.clipboard.Clipboard
    #:import Snackbar kivymd.uix.snackbar.Snackbar
    name: "editShow"
    FitImage:
        #source: 'images/rh.jpg'
        id: pic
        source: app.get_wall("today")
        size: self.width,self.height
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('archive','left'),'home']]





        ScrollView:
            #id: history_view

            
            MDList:
                spacing: app.cspacing/2
                padding: app.cpadding/2,app.cpadding/2
                bg_color:app.theme_cls.bg_dark
                id: archive
                ThreeLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    id:show
                    text:'bla'
                    IconLeftWidget:
                        icon:"calendar-star"
                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Hour Unpaid Lunches"
                    id: lunches
                    YourContainer:
                        id: button3
                        MDButton:
                            id: button4
                            padding: [15, 15]

                            #width: 5
                            text: "3"
                            trailing_text:'wat'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            values: app.lunches
                            items: app.lunches
                            id: button4
                            on_release: app.choose_drop(app.lunches,'lunches')
                            size_hint:app.right_hint
                            width:app.right_width
                    IconLeftWidget:
                        icon: "food"

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "OverTime After"
                    id: ota
                    YourContainer:
                        id: button3
                        text:'wow'
                        MDButton:
                            padding: [15, 15]
                            size_hint:app.right_hint
                            width:app.right_width

                            #width: 5
                            
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            #values: app.oth
                            items: app.oth
                            id: button5
                            on_release: app.choose_drop(app.oth,'oth')
                            text: "8"
                            
                    IconLeftWidget:
                        icon: "one-up"

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Time Out"
                    id: endtime
                    IconLeftWidget:
                        icon: "clock"
                    YourContainer:
                        id: container

                        MDButton:
                            text:"Time"
                            id:newhours
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            on_release: app.show_time_picker("end_time")                

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Total Hours"
                    id: endtime
                    IconLeftWidget:
                        icon: "update"
                    YourContainer:
                        id: container

                        MDLabel:
                            text:"Time"
                            id:newhoursplus
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            #on_release: app.show_time_picker("end_time")

                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    #text: "Rate"
                    id: rat
                    #on_release: app.tokast('wow')
                    on_release: app.set_rate()
                    IconLeftWidget:
                        icon: "cash"
                    YourContainer:
                        id: container

                        MDTextField:
                            color_mode: 'accent'
                            #text:"28.5"
                            #padding: [15, 15]
                            #pos_hint: {'center_x': .5, 'center_y': .5}
                            pos_hint: {.9: .5}
                            
                            id:rate
                            #size_hint:app.right_hint
                            width:app.right_width
                            #id:newhours
                            
                OneLineAvatarIconListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Earnings"
                    id: rate1
                    #on_release: app.tokast('wow')
                    IconLeftWidget:
                        icon: "cash-multiple"
                    YourContainer:
                        id: earnings

                        MDLabel:
                            #text:"28.5"
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            
                            id:earningsl
                            size_hint:app.right_hint
                            width:app.right_width+200
                            #id:newhours
                            #on_release: app.show_time_picker()


                TextInput:

                    id: user_notes
                    valign: 'middle'
                    hint_text:'Notes'
                    halign: 'left'
                    font_size: dp(16)
                    multiline: True
                    size_hint: 1, None
                    height: dp(70)
                    #height: scrlv.height
                    text:''
                    background_color: app.theme_cls.bg_dark
                    hint_text_color:app.theme_cls.opposite_bg_dark
                    text_color:app.theme_cls.opposite_bg_dark
                    foreground_color:app.theme_cls.opposite_bg_dark

                BoxLayout:
                    pos_hint: {"center_x": .8, "center_y": .5}
                    orientation: "horizontal"
                    height: dp(50)
                    #spacing: app.cspacing/2
                    #padding: dp(100),dp(100)
                    size_hint: 1, None
                    width:update.width*5
                    
                    MDButton:
                        text:"Update"
                        id:update
                        spacing: app.cspacing/2
                        on_release: app.update_show()
                    MDButton:
                        text:"Hide"
                        spacing: app.cspacing/2
                        on_release: app.hide_show()
                    MDButton:
                        text:"Delete"
                        spacing: app.cspacing/2
                        on_release: app.delete_show()

<add_user_showscreen>
    #:import Clipboard kivy.core.clipboard.Clipboard
    #:import Snackbar kivymd.uix.snackbar.Snackbar
    name: "add_user_show"

    FitImage:
        #source: 'images/rh.jpg'
        id: pic
        source: app.get_wall("today")
        size: self.width,self.height
    BoxLayout:
        orientation: "vertical"
        bg_color:app.theme_cls.bg_dark
        background_color: app.theme_cls.bg_dark
        MDTopAppBar:
            #title: "Settings"
            height: app.mheight
            left_action_items: [['chevron-left', lambda screen: app.change_screen('today','left'),'home']]





        ScrollView:
            #id: history_view
            bg_color:app.theme_cls.bg_dark
            background_color: app.theme_cls.bg_dark

            
            MDList:
                spacing: app.cspacing/2
                padding: app.cpadding/2,app.cpadding/2
                bg_color:app.theme_cls.bg_dark
                id: archive
                bg_color:app.theme_cls.bg_dark
                background_color: app.theme_cls.bg_dark


                MDTextField:
                    bg_color:app.theme_cls.bg_dark
                    background_color: app.theme_cls.bg_dark
                    id: event
                    hint_text: "Event"
                    #mode: "rectangle"
                    mode: "fill"
                    icon_left: "calendar-star"
                    #on_text: root.set_list_md_icons(self.text, True)
                MDTextField:
                    bg_color:app.theme_cls.bg_dark
                    line_color_focus: 1, 0, 1, 1
                    background_color: app.theme_cls.bg_dark
                    id: location
                    hint_text: "Location"
                    #mode: "round"
                    mode: "fill"
                    icon_left: "magnify"
                    #on_text: root.set_list_md_icons(self.text, True)

                MDListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Date"
                    id: startdate
                    IconLeftWidget:
                        icon: "stop-circle"
                    YourContainer:
                        id: container

                        MDButton:
                            text:"Date"
                            id:start_date
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            on_release: app.show_date_picker_norange()
                MDListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "Start Time"
                    id: starttime
                    IconLeftWidget:
                        icon: "stop-circle"
                    YourContainer:
                        id: container

                        MDButton:
                            text:"Time"
                            id:start_time
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            on_release: app.show_time_picker("start_time")
                MDListItem:
                    bg_color: app.theme_cls.bg_dark
                    text: "End Time"
                    id: endtime
                    IconLeftWidget:
                        icon: "stop-circle"
                    YourContainer:
                        id: container

                        MDButton:
                            text:"Time"
                            id:end_time
                            padding: [15, 15]
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            size_hint:app.right_hint
                            width:app.right_width
                            on_release: app.show_time_picker("end_time")

                

                TextInput:

                    id: user_notes
                    valign: 'middle'
                    hint_text:'Notes'
                    halign: 'left'
                    font_size: dp(16)
                    multiline: True
                    size_hint: 1, None
                    height: dp(100)
                    text: "notes"
                    #height: scrlv.height
                    background_color: app.theme_cls.bg_dark
                    hint_text_color:app.theme_cls.opposite_bg_dark
                    text_color:app.theme_cls.opposite_bg_dark
                    foreground_color:app.theme_cls.opposite_bg_dark


                MDButton:
                    text:"Update"
                    on_release: app.create_custom_show()

                
